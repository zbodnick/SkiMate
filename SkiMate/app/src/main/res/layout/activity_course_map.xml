<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/undoButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorAccent"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.954"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:layout_constraintVertical_bias="0.029"
        map:srcCompat="@drawable/ic_replay_black_24dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarShadow"
        android:layout_width="406dp"
        android:layout_height="127dp"
        android:foreground="@drawable/round_outline_shadow"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.461"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="395dp"
        android:layout_height="183dp"
        android:background="@drawable/round_outline_shadow"
        android:foreground="@drawable/top_rounded_corners"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/rotateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="4dp"
        android:text="@string/rotate_title"
        android:textColor="@color/opaqueDarkerGrey"
        android:textSize="24sp"
        android:textStyle="bold"
        map:layout_constraintBottom_toBottomOf="@+id/map"
        map:layout_constraintEnd_toStartOf="@+id/rotateSeekBar"
        map:layout_constraintHorizontal_bias="0.587"
        map:layout_constraintStart_toStartOf="@+id/toolbar"
        map:layout_constraintTop_toTopOf="@+id/toolbar"
        map:layout_constraintVertical_bias="0.802" />

    <Button
        android:id="@+id/place_course_button"
        android:layout_width="344dp"
        android:layout_height="41dp"
        android:layout_marginBottom="60dp"
        android:background="@color/colorAccent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/course_placement_instructions"
        android:textColor="@android:color/white"
        map:layout_constraintBottom_toBottomOf="@+id/map"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.492"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/toolbar"
        map:layout_constraintVertical_bias="0.182" />

    <SeekBar
        android:id="@+id/rotateSeekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="216dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:max="180"
        android:min="0"
        android:paddingTop="0dp"
        android:progressBackgroundTint="@color/darkerGrey"
        android:progressTint="@color/darkerGrey"
        android:progressTintMode="src_atop"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.825"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editCourseName"
        android:layout_width="331dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name_tag"
        android:textColor="@android:color/darker_gray"
        map:layout_constraintBottom_toTopOf="@+id/rotateSeekBar"
        map:layout_constraintEnd_toEndOf="@+id/toolbar"
        map:layout_constraintHorizontal_bias="0.555"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/toolbarShadow"
        map:layout_constraintVertical_bias="0.68" />


</androidx.constraintlayout.widget.ConstraintLayout>